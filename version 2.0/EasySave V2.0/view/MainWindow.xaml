<Window x:Class="EasySaveApp.view.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesigin="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:EasySaveApp.view"
        mc:Ignorable="d"
        Height="500"
        Width="950"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Resources\en-GB.xaml"/>
                <ResourceDictionary Source="..\Resources\fr-FR.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- Fond principal nuit -->
    <Window.Background>
        <SolidColorBrush Color="#2C3E50"/>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- PARTIE GAUCHE : FR/EN + Blacklist -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#2C3E50" Offset="1"/>
                    <GradientStop Color="#2C3E50" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20"
                                  Color="#34495E"
                                  RenderingBias="Quality"
                                  ShadowDepth="1"/>
            </Grid.Effect>

            <Grid Background="#2C3E50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="27*"/>
                    <ColumnDefinition Width="23*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="EASYSAVE"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontFamily="Impact"
                           FontWeight="Normal"
                           Foreground="White"
                           FontSize="45"
                           Grid.ColumnSpan="2"
                           Margin="13,0,0,0"/>
                <Rectangle HorizontalAlignment="Left"
                           Height="100"
                           Stroke="White"
                           VerticalAlignment="Top"
                           Width="200"
                           Margin="13,308,0,0"
                           Grid.ColumnSpan="2"/>
            </Grid>

            <StackPanel Grid.Row="1" Margin="10">
                <Button Click="OpenBlacklist"
                        Background="#F3F3F4"
                        Height="48"
                        BorderBrush="{x:Null}"
                        Margin="0,0,0,10">
                    <Grid Width="150" Height="30">
                        <materialDesigin:PackIcon Kind="Block"
                                                  VerticalAlignment="Center"
                                                  Margin="-4,0,0,0"
                                                  Foreground="Black"/>
                        <TextBlock Text="{DynamicResource text_jailapps}"
                                   Margin="16,0,0,0"
                                   FontFamily="Segoe UI Variable Text Semibold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Width="154"
                                   FontSize="14"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Grid>
                </Button>

                <Button Click="ButtonClickFr"
                        Background="#F3F3F4"
                        Height="48"
                        BorderBrush="{x:Null}"
                        Margin="0,0,0,10">
                    <Grid Width="150" Height="30">
                        <materialDesigin:PackIcon Kind="translate"
                                                  VerticalAlignment="Center"
                                                  Margin="-4,0,0,0"
                                                  Foreground="Black"/>
                        <TextBlock Text="{DynamicResource francais_text}"
                                   Margin="16,0,0,0"
                                   FontFamily="Segoe UI Variable Text Semibold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Width="154"
                                   FontSize="14"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Grid>
                </Button>

                <Button Click="ButtonClickEn"
                        Background="#F3F3F4"
                        Height="48"
                        BorderBrush="{x:Null}">
                    <Grid Width="150" Height="30">
                        <materialDesigin:PackIcon Kind="language"
                                                  VerticalAlignment="Center"
                                                  Margin="-4,0,0,0"
                                                  Foreground="Black"/>
                        <TextBlock Text="{DynamicResource english_text}"
                                   Margin="16,0,0,0"
                                   FontFamily="Segoe UI Variable Text Semibold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Width="154"
                                   FontSize="14"
                                   Foreground="Black"
                                   FontWeight="Bold"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>

        <!-- PARTIE DROITE : FORMULAIRE + LISTE + BOUTONS -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="111*"/>
                <RowDefinition Height="124*"/>
            </Grid.RowDefinitions>

            <!-- Fond blanc derrière le formulaire -->
            <Rectangle Margin="20,26,10,10"
                       Fill="#F3F3F4"
                       RadiusX="11"
                       RadiusY="11"/>
            <Grid>
                <!-- Bouton Ajouter -->
                <Button x:Name="buton_addsave"
                        Click="ButtonAddSaveClick"
                        Margin="510,138,40,36"
                        Background="#34495E"
                        Height="48"
                        BorderBrush="{x:Null}">
                    <Grid Width="150" Height="30">
                        <materialDesigin:PackIcon Kind="backup"
                                                  Margin="-16,1,0,0"
                                                  Foreground="White"
                                                  Height="25"
                                                  Width="25"/>
                        <TextBlock Text="{DynamicResource text_addsave}"
                                   FontFamily="Segoe UI Variable Text Semibold"
                                   TextAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="10"
                                   Foreground="White"
                                   Margin="2,0,-22,0"/>
                    </Grid>
                </Button>

                <!-- Radio Full / Diff -->
                <RadioButton x:Name="mirror_button"
                             GroupName="BackupMode"
                             Content="{DynamicResource mirror_button}"
                             HorizontalAlignment="Left"
                             Margin="533,81,0,0"
                             VerticalAlignment="Top"
                             Height="14"
                             IsChecked="True"
                             Width="195"
                             FontFamily="Segoe UI Variable Text Semibold"/>
                <RadioButton x:Name="diff_button"
                             GroupName="BackupMode"
                             Content="{DynamicResource diff_button}"
                             HorizontalAlignment="Left"
                             Margin="533,0,0,0"
                             VerticalAlignment="Center"
                             Height="20"
                             Width="195"
                             FontFamily="Segoe UI Variable Text Semibold"/>

                <!--
                  ┌────────────────────────────────────────────────────────────────────────────────┐
                  │   Grid interne pour les champs nom/source/target/mirror + extensions + passwd │
                  └────────────────────────────────────────────────────────────────────────────────┘
                -->
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="274*"/>
                        <ColumnDefinition Width="147*"/>
                        <ColumnDefinition Width="37*"/>
                        <ColumnDefinition Width="292*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Labels existants -->
                    <Label x:Name="name_backup"
                           Content="{DynamicResource backup_name}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="21,33,0,162"/>
                    <Label x:Name="source_name"
                           Content="{DynamicResource source_name}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="21,65,4,131"/>
                    <Label x:Name="target_name"
                           Content="{DynamicResource target_name}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="21,102,1,96"/>
                    <Label x:Name="mirror_name"
                           Content="{DynamicResource mirror_name}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="20,139,0,55"/>

                    <!-- TextBoxes existants -->
                    <TextBox x:Name="name_save"
                             Margin="0,33,0,166"
                             Grid.Column="1"
                             HorizontalAlignment="Center"
                             Width="143"/>
                    <TextBox x:Name="SoureDir"
                             Grid.Column="1"
                             Margin="0,65,0,134"
                             Width="143"
                             HorizontalAlignment="Center"/>
                    <TextBox x:Name="TargetDir"
                             Grid.Column="1"
                             Margin="0,102,0,97"
                             Width="143"
                             HorizontalAlignment="Center"/>
                    <TextBox x:Name="MirrorDir"
                             IsEnabled="{Binding IsChecked, ElementName=diff_button}"
                             Grid.Column="1"
                             HorizontalAlignment="Center"
                             Margin="0,140,0,59"
                             Width="143"/>

                    <!-- Boutons “…” pour dialogues -->
                    <Button Content="..."
                            Click="SourceResourceClick"
                            Margin="7,68,7,137"
                            Grid.Column="2"
                            Background="Black"
                            Foreground="White"
                            BorderBrush="{x:Null}"/>
                    <Button x:Name="target_directory"
                            Content="..."
                            Click="TargetResourceClick"
                            Grid.Column="2"
                            Background="Black"
                            Foreground="White"
                            BorderBrush="{x:Null}"
                            Margin="7,106,7,99"/>
                    <Button x:Name="mirror_directory"
                            Content="..."
                            IsEnabled="{Binding IsChecked, ElementName=diff_button}"
                            Click="MirrorResourceClick"
                            Grid.Column="2"
                            Background="#34495E"
                            Foreground="White"
                            BorderBrush="{x:Null}"
                            Margin="7,142,7,63"/>

                    <Label x:Name="name_backup_Copy"
                           Content="{DynamicResource msg_parameters}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="0,27,0,168"
                           Grid.Column="3"
                           HorizontalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"/>

                    <!-- ──────────────────────────────────────────────────────── -->
                    <!--   NOUVELLE LIGNE : Extensions à chiffrer                -->
                    <!-- ──────────────────────────────────────────────────────── -->
                    <Label Content="{DynamicResource extensions_label}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="21,177,0,20"/>
                    <TextBox x:Name="ExtensionsTextBox"
                             Grid.Column="1"
                             Margin="0,177,0,20"
                             Width="143"
                             HorizontalAlignment="Center"
                             Text=".bmp;.txt;.log;.docx"
                             ToolTip="{DynamicResource extensions_tooltip}"/>

                    <!-- ──────────────────────────────────────────────────────── -->
                    <!--   NOUVELLE LIGNE : Mot de passe de chiffrement           -->
                    <!-- ──────────────────────────────────────────────────────── -->
                    <Label Content="{DynamicResource password_label}"
                           FontFamily="Segoe UI Variable Text Semibold"
                           Margin="21,214,0,0"/>
                    <PasswordBox x:Name="PasswordBox"
                                 Grid.Column="1"
                                 Margin="0,214,0,0"
                                 Width="143"
                                 HorizontalAlignment="Center"
                                 ToolTip="{DynamicResource password_tooltip}"/>
                </Grid>
                <!-- FIN DU GRID INTERNE -->

                <!-- Radio XML / Json -->
                <RadioButton x:Name="xml_button"
                             GroupName="LogFile"
                             Content="XML"
                             HorizontalAlignment="Left"
                             Margin="533,62,0,0"
                             VerticalAlignment="Top"
                             Height="14"
                             IsChecked="True"
                             Checked="XmlLog"
                             Width="195"
                             FontFamily="Segoe UI Variable Text Semibold"/>
                <RadioButton x:Name="Json_button"
                             GroupName="LogFile"
                             Content="Json"
                             HorizontalAlignment="Left"
                             Margin="611,62,0,0"
                             VerticalAlignment="Top"
                             Height="14"
                             Checked="JsonLog"
                             Width="58"
                             FontFamily="Segoe UI Variable Text Semibold"/>
            </Grid>

            <Rectangle Grid.Row="1"
                       Margin="15"
                       Fill="#F3F3F4"
                       RadiusX="11"
                       RadiusY="11"/>
            <ListBox x:Name="Save_work"
                     SelectionMode="Multiple"
                     Grid.Row="1"
                     Margin="27,27,363,27"/>

            <Button x:Name="button_start_save"
                    Click="ButtonStartSaveClick"
                    Margin="506,126,44,74"
                    Background="#34495E"
                    Height="48"
                    BorderBrush="{x:Null}"
                    Grid.Row="1">
                <Grid Width="150" Height="30">
                    <materialDesigin:PackIcon Kind="Update"
                                              Margin="-16,1,0,0"
                                              Foreground="White"
                                              Height="25"
                                              Width="25"/>
                    <TextBlock Text="{DynamicResource text_startbackup}"
                               FontFamily="Segoe UI Variable Text Semibold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="10"
                               Foreground="White"
                               Margin="4,0,-14,0"
                               FontWeight="Bold"/>
                </Grid>
            </Button>

            <Rectangle Grid.Row="1"
                       Margin="406,22,23,128"
                       Fill="#34495E"
                       RadiusX="15"
                       RadiusY="15"/>
            <materialDesigin:PackIcon Kind="Message"
                                      Margin="417,45,0,0"
                                      Foreground="White"
                                      Height="51"
                                      Width="56"
                                      Visibility="Visible"
                                      Grid.Row="1"/>
            <TextBlock x:Name="result"
                       TextAlignment="Justify"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="473,33,0,0"
                       FontFamily="Segoe UI Variable Text Semibold"
                       Width="248"
                       Grid.Row="1"
                       Height="75"
                       Foreground="White"/>
            <Button Content="{DynamicResource btn_selectall}"
                    HorizontalAlignment="Left"
                    Background="#34495E"
                    Foreground="White"
                    Margin="417,160,0,0"
                    Grid.Row="1"
                    VerticalAlignment="Top"
                    Click="ButtonSelectAll"
                    Height="34"
                    Width="56"
                    FontWeight="Bold"/>
            <Button Click="ButtonDeleteSave"
                    Background="#34495E"
                    BorderBrush="{x:Null}"
                    Margin="506,178,44,27"
                    Grid.Row="1">
                <Grid Width="150" Height="30">
                    <materialDesigin:PackIcon Kind="Block"
                                              VerticalAlignment="Center"
                                              Margin="-4,0,0,0"
                                              Foreground="White"
                                              Height="19"
                                              Width="20"/>
                    <TextBlock Text="{DynamicResource delete_backup}"
                               Margin="16,0,0,0"
                               FontFamily="Segoe UI Variable Text Semibold"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Width="154"
                               FontSize="14"
                               Foreground="White"
                               FontWeight="Bold"/>
                </Grid>
            </Button>
        </Grid>

        <!-- Barre supérieure (titre + quitter) -->
        <Grid x:Name="Grid_Menu"
              Grid.ColumnSpan="2"
              Background="#34495E"
              MouseDown="GridMenuMouseDown">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Background="#F3F3F4">
                <Button x:Name="Buttonexit"
                        Width="25"
                        Height="25"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        Foreground="Red"
                        Click="ButtonExit">
                    <materialDesigin:PackIcon Kind="Power"/>
                </Button>
            </StackPanel>
            <Label Content="EasySave V2.0"
                   HorizontalAlignment="Left"
                   Height="30"
                   VerticalAlignment="Top"
                   Width="126"
                   FontWeight="Bold"
                   FontFamily="Segoe UI Variable Text Semibold"
                   Foreground="White"
                   FontSize="18"
                   Margin="434,-5,0,0"/>
        </Grid>
    </Grid>
</Window>
